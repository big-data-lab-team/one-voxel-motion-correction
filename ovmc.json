{
    "command-line": "ovmc [ALGORITHM] [DATASET] [OUTPUT_FILE_NAME]",
    "container-image": {
        "image": "bigdatalabteam/one-voxel-motion-correction:latest",
        "type": "docker"
    },
    "environment-variables": [
        {"name": "FSLOUTPUTTYPE",
	 "value": "NIFTI_GZ"}
    ],
    "description": "mcflirt motion estimation as used in ovmc experiment.",
    "inputs": [
        {
            "id": "dataset",
            "name": "The fMRI sequence to process",
            "type": "File",
            "value-key": "[DATASET]"
        },
        {
            "id": "output_file_name",
            "name": "Output file name",
            "type": "String",
            "value-key": "[OUTPUT_FILE_NAME]"
        },
        {
            "id": "algorithm",
            "name": "Motion estimation algorithm",
            "type": "String",
            "value-key": "[ALGORITHM]",
            "value-choices": ["mcflirt", "mcflirt_fudge", "niaklike", "niaklike_no_chained_init", "spm"]
        }
    ],
    "name": "ovmc",
    "output-files": [
        {
            "id": "par_file",
            "name": "Parameter file produced by motion correction",
            "optional": false,
            "path-template": "[OUTPUT_FILE_NAME]"
        }
    ],
    "tests": [
        {
            "name": "test-mcflirt-ovmc",
            "invocation": {
                "algorithm": "mcflirt",
                "output_file_name": "output",
                "dataset": "/test/test.nii.gz"
            },
            "assertions": {
                "exit-code": 0,
                "output-files": [ {
                    "id": "par_file",
                    "md5-reference": "0b3cb6406ac8ec34042ae2c7a480dba6"
                }
				]
            }
        },
        {
            "name": "test-mcflirt-fudge-ovmc",
            "invocation": {
                "algorithm": "mcflirt_fudge",
                "output_file_name": "output",
                "dataset": "/test/test.nii.gz"
            },
            "assertions": {
                "exit-code": 0,
                "output-files": [ {
                    "id": "par_file",
                    "md5-reference": "0b3cb6406ac8ec34042ae2c7a480dba6"
                }
				]
            }
        }
    ],
    "schema-version": "0.5",
    "tags": {
        "purpose": "experiment",
        "modality": "fmri",
        "pipeline": "motion-estimation"
    },
    "tool-version": "0.1"
}
