{
    "command-line": "mcflirt_ovmc [DATASET]",
    "container-image": {
        "image": "bigdatalabteam/ovmc:latest",
        "index": "docker://",
        "type": "singularity"
    },
    "description": "mcflirt motion estimation as used in ovmc experiment.",
    "inputs": [
        {
            "id": "dataset",
            "name": "The fMRI sequence to process",
            "type": "File",
            "value-key": "[DATASET]"
        }
    ],
    "name": "mcflirt-ovmc",
    "output-files": [
        {
            "id": "par_file",
            "name": "Parameter file produced by mcflirt",
            "optional": false,
            "path-template": "[DATASET]_mcflirt.par",
            "path-template-stripped-extensions": [
                ".nii", ".gz", ".nii.gz"
            ]
        }
    ],
    "tests": [
        {
            "name": "test-mcflirt-ovmc",
            "invocation": {
                "dataset": "/test/test.nii.gz"
            },
            "assertions": {
                "exit-code": 0,
                "output-files": [ {
                        "id": "par_file",
                        "md5-reference": "0b3cb6406ac8ec34042ae2c7a480dba6"
                    }
                ]
            }
        }
    ],
    "schema-version": "0.5",
    "tags": {
        "purpose": "experiment",
        "modality": "fmri",
        "pipeline": "motion-estimation"
    },
    "tool-version": "0.1"
}
